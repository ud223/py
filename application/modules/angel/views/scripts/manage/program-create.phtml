<script type="text/javascript">
    (function($) {
        $('input[data-toggle="popover"]').popover({animation: false});

//        $('.gy-photo').photoSelector(false, "set save here");
        $('.gy-photo').photoSelector();

        $('#save-btn').click(function() {
            var save = $('#gy-photo').attr('save');
            if (!save || save === '{}') {
                $('#photo').val('');
            } else {
                $('#photo').val(save);
            }
        });
        
        $("#file_upload").uploadify({
            swf: '/uploadify/uploadify.swf',
            uploader: '/manage/txt/upload',
            fileTypeExts: '*.txt',
            buttonText: '选择即将上传的文件',
            auto: false,
            height: 30,
            width: 180,
            'onUploadComplete': function(file) {
            },
            'onUploadSuccess': function(file, data, response) {
                uploadifyUploadSuccess(file, data, response);
            },
            'onQueueComplete': function(queueData) {
                uploadifyQueueComplete(queueData);
            },
            'onUploadStart': function(file) {

            }
        });

        function uploadifyUploadSuccess(file, data, response) {
            var files = $('#next-lnk').attr('files');
            if (files) {
                files += "|" + data;
            } else {
                files = data;
            }
            $('#next-lnk').attr('files', files);
        }
        function uploadifyQueueComplete(queueData) {
            $('#no-success').html(queueData.uploadsSuccessful);
            $('#next-step').show();
        }

        $('#upload-all').click(function() {
            $('#file_upload').uploadify('upload', '*');
        });

        $('#cancel-all').click(function() {
            $('#file_upload').uploadify('cancel', '*');
            $('#next-step').hide();
            $('#next-lnk').attr('files', '');
        });
        $('#next-lnk').click(function() {
            var url = $(this).attr('href') + "?fs=" + $(this).attr('files');
            $(this).attr('href', url);
        });
    })(jQuery);
</script>