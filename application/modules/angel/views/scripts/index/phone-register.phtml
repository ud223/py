                return false;
            }
            if (!email.isEmail()) {
                alert('请输入正确邮箱');
                return false;
            }
            var username = $('#username').val();
            if (!username) {
                alert('请输入用户名');
                return false;
            }
            if (username.length < 4) {
                alert('用户名不少于4位数');
                return false;
            }
            var password = $('#password').val();
            if (!password) {
                alert('请输入密码');
                return false;
            }
            if (password.length < 6) {
                alert('密码不少于6位数');
                return false;
            }
        })
    })(jQuery);
</script>