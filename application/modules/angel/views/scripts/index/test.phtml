<div id="aaa" style="height:500px;width:500px;background:red;">

</div>

<script type="text/javascript">
    $(document).ready(function() {
        $('#aaa').on('mousemove', function(eve) {
            if (window.event) {
                $('#aaa').html(event.clientX);
            } else {
                $('#aaa').html(eve.clientX);
            }
        });


    });

</script>